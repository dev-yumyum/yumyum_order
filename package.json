{
  "name": "yumyum_order",
  "version": "1.0.15",
  "description": "YumYum Order Management System - 냠냠픽업 주문 접수 시스템",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "web": "npx http-server . -p 3000 -o /public/index.html",
    "web:dev": "npx http-server . -p 3000 -c-1 -o /public/index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "echo 'No build needed for static site'",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:mac": "electron-builder --mac",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:mac-intel": "electron-builder --mac --x64",
    "build:all": "electron-builder --win --mac",
    "pack": "electron-builder --dir",
    "vercel:deploy": "vercel --prod",
    "vercel:dev": "vercel dev"
  },
  "keywords": [
    "yumyum",
    "order",
    "management",
    "electron",
    "desktop"
  ],
  "author": "DoWon Jung",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "build": {
    "appId": "com.yumyum.order.management",
    "productName": "YumYum 주문접수",
    "npmRebuild": false,
    "asar": true,
    "compression": "maximum",
    "electronLanguages": ["ko", "en", "en-US"],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "assets/**/*",
      "!node_modules/**/*",
      "node_modules/serialport/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "assets/**/*",
      "node_modules/serialport/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YumYum 주문접수",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "language": "2066",
      "differentialPackage": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "${productName} ${version}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  },
  "optionalDependencies": {
    "serialport": "^13.0.0"
  }
}
